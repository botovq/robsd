#!/bin/sh

set -e

usage() {
	echo "usage: robsd-clean count" 1>&2
	exit 1
}

fatal() {
	info "$*"
	exit 1
}

info() {
	echo "robsd-clean: ${*}" 1>&2
}

[ "$(id -u)" -ne 0 ] && fatal "must be run as root"
[ $# -ne 1 ] && usage

. "${EXECDIR:-/usr/local/libexec/robsd}/util.sh"

config_load

purge "$BUILDDIR" "$1" | while read -r _d; do
	info "moving ${_d} to the attic"
done
