#!/bin/ksh

set -eu

usage() {
	echo "usage: robsd-clean count" 1>&2
	exit 1
}

. "${EXECDIR:-/usr/local/libexec/robsd}/util.sh"

[ $# -eq 1 ] || usage

setmode -p "$0"
setprogname "${_MODE}-clean"
[ "$(id -u)" -ne 0 ] && fatal "must be run as root"
config_load <<'EOF'
ROBSDDIR="${robsddir}"
KEEPDIR="${keep-dir}"
EOF

purge "$ROBSDDIR" "$1" | while read -r _d; do
	info "moving ${_d} to ${KEEPDIR}"
done
